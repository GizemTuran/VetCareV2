<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <ul class="navbar">
        <li><img id="img" src="~/Content/assets/Petlogo1.png"></li>
        <li>@Html.ActionLink("Register", "Register", "Login")</li>
        <li>@Html.ActionLink("Login", "Login", "Login")</li>
        @if (Session["ID"]!=null){
        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
        }
        <li>@Html.ActionLink("Schedule", "Index", "Schedule")</li>
        <li>@Html.ActionLink("About", "About", "About")</li>
        <li>@Html.ActionLink("Appointment", "Appointment", "Appointment")</li>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
    </ul>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="footer">
        <p>CSE5001<a href="https://www.iku.edu.tr/"> IKU </a>WEB PROGRAMMING 2022</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
